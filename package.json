{
  "name": "@alandrade21/ex-aerarium",
  "version": "1.0.0",
  "description": "Gerenciador financeiro",
  "homepage": "https://github.com/alandrade21/exAerarium",
  "license": "AGPL-3.0",
  "author": "André Andrade <alandrade21@gmail.com> (https://github.com/alandrade21)",
  "main": "electron/dist/main.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alandrade21/exAerarium.git"
  },
  "keywords": [
    "angular",
    "angular 7",
    "electron",
    "typescript",
    "sass",
    "sqlite",
    "typeorm",
    "gerenciador financeiro",
    "finanças"
  ],
  "scripts": {
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "start:local": "npm run postinstall:electron && npm-run-all ng:build:dev electron:build-tsc electron:local",
    "build": "npm run postinstall:electron && ng:build:dev && electron:build-tsc",
    "build:prod": "npm run postinstall:electron && ng:build:prod && electron:build-tsc",
    "ng:build:dev": "ng build --base-href ./ -c dev",
    "ng:build:prod": "ng build --base-href ./ -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:build-tsc": "tsc --p electron",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:build-tsc && ELECTRON_ENV=dev electron . --serve",
    "electron:local": "ELECTRON_ENV=dev electron .",
    "electron:linux": "npm run postinstall:electron && ng:build:prod && electron:build-tsc && electron-builder build --linux",
    "electron:windows": "npm run postinstall:electron && ng:build:prod && electron:build-tsc && electron-builder build --windows",
    "electron:mac": "npm run postinstall:electron && build:prod && electron:build-tsc && electron-builder build --mac",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.0",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.9",
    "@angular/animations": "~8.2.10",
    "@angular/cli": "~8.3.9",
    "@angular/common": "~8.2.10",
    "@angular/compiler": "~8.2.10",
    "@angular/compiler-cli": "~8.2.10",
    "@angular/core": "~8.2.10",
    "@angular/forms": "~8.2.10",
    "@angular/language-service": "~8.2.10",
    "@angular/platform-browser": "~8.2.10",
    "@angular/platform-browser-dynamic": "~8.2.10",
    "@angular/router": "~8.2.10",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jasmine": "^3.4.4",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.7.12",
    "@types/sqlite3": "^3.1.5",
    "chai": "4.2.0",
    "codelyzer": "^5.1.2",
    "conventional-changelog-cli": "^2.0.25",
    "core-js": "^3.3.2",
    "electron": "6.0.12",
    "electron-builder": "~21.2.0",
    "electron-reload": "~1.5.0",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "npm-run-all": "^4.1.5",
    "protractor": "^5.4.1",
    "rxjs": "^6.5.3",
    "spectron": "8.0.0",
    "ts-node": "^8.4.1",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "~3.5.3",
    "wait-on": "^3.3.0",
    "webdriver-manager": "^12.1.7",
    "zone.js": "^0.10.2"
  }
}
